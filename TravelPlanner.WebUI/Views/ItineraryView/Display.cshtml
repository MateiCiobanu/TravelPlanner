@model TravelPlanner.Application.ViewModels.ItineraryViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@Model.Destination Itinerary</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header class="hero">
        <div class="overlay">
            <h1 class="adamina-bold text-uppercase">@Model.Destination</h1>
            <p class="adamina-regular">@Model.Days.FirstOrDefault()?.Date.ToString("MMMM d")</p>
        </div>
    </header>

    <main class="itinerary-container">
        <section class="itinerary adamina-bold">
            <h2 class="adamina-bold">Travel Itinerary</h2>
            
            @foreach (var day in Model.Days)
            {
                <h3 class="adamina-bold">@day.Date.ToString("dddd, MMMM d")</h3>
                
                @foreach (var evt in day.Events)
                {
                    <div class="event">
                    <span class="time adamina-regular">
                        @evt.StartTime.ToString(@"h\:mm") â€“ @evt.EndTime.ToString(@"h\:mm")
                    </span>                        
        <span class="desc adamina-regular">@evt.Description</span>
                    </div>
                }
            }
        </section>
    </main>
</body>
</html>