    }

    .day-selector {
      background-color: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(4px);
      border-radius: 12px;
      padding: 1rem;
      width: 250px;
    }

    .day-button {
      display: block;
      width: 100%;
      background-color: rgba(255, 255, 255, 0.2);
      border: none;
      color: white;
